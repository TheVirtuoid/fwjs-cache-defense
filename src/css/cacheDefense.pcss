body {
    background-color: black;
    color: white;
    margin: 0;
    padding: 0;
    font-size: 1.25rem;
}

.hidden {
    display: none;
}


#control-panel {
    background-color: #bb8712;
    color: black;
    display: flex;
    flex-direction: row;
    justify-content: space-around;

    & section {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
}

